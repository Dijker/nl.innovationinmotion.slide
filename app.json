{
    "id": "nl.innovationinmotion.slide",
    "name": {
        "en": "Slide",
        "nl": "Slide"
    },
    "sdk": 2,
    "version": "0.3.3",
    "compatibility": ">=1.5.0",
    "brandColor": "#284874",
    "author": {
        "name": "Chamid Media",
        "email": "info@chamidmedia.nl"
    },
    "contributing": {
	    "donate": {
	        "paypal": {
	            "email": "info@chamidmedia.nl",
	            "currency": "EUR"
	        }
	    }
	},
	"homeyCommunityTopicId": 11915,
    "images": {
      "large": "./assets/images/large.jpg",
      "small": "./assets/images/small.jpg"
    },
    "tags": {
        "en": [ "Curtains" ],
        "nl": [ "Gordijnen" ]
    },
    "category": "appliances",
    "description": {
    	"en": "Control your curtains with Slide through Homey",
		"nl": "Bestuur je gordijnen met Slide via Homey"
    },
    "drivers": [
      {
          "id": "slide",
          "name": {
              "en": "Slide",
              "nl": "Slide"
          },
          "images": {
              "large": "drivers/slide/assets/images/large.jpg",
              "small": "drivers/slide/assets/images/small.jpg"
          },
          "class": "curtain",
          "capabilities": ["windowcoverings_set"],
          "capabilitiesOptions": {
	          "dim": {
		          "title": {
			          "en": "Drag to open/close",
			          "nl": "Verschuif om te openen/sluiten"
		          }
	          }
	      },
	      "mobile": {
            "components": [
                {
                    "id": "slider",
                    "capabilities": [ "dim" ],
                    "options": {
                        "showTitle": true
                    }
                }
				]
		  },
          "pair": [
	            {
		          "id": "login",
		          "template": "login_credentials",
		          "options": {
			          "logo": "small.jpg"
		          },
		          "navigation": {
                        "next": "list_devices"
                   }
	            },
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices"
                }
          ]
      }
    ],
    "flow": {
	    "actions": [
        {
            "id": "ImmediateStop",
            "title": {
                "en": "Immediate Stop",
                "nl": "Stop direct"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "placeholder": {
                  "en": "Select slide",
                  "nl": "Selecteer slide"
                },
	            "filter": "driver_id=slide"
              }
            ]
        }
       
       ]
	}
}