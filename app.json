{
    "id": "nl.innovationinmotion.slide",
    "name": {
        "en": "Slide Smart Curtains",
        "nl": "Slide slimme gordijnen"
    },
    "sdk": 2,
    "version": "0.0.1",
    "compatibility": "*",
    "author": {
        "name": "Chamid Media",
        "email": "info@chamidmedia.nl"
    },
    "contributing": {
	    "donate": {
	        "paypal": {
	            "email": "info@chamidmedia.nl",
	            "currency": "EUR"
	        }
	    }
	},
    "images": {
      "large": "./assets/images/large.jpg",
      "small": "./assets/images/small.jpg"
    },
    "category": "appliances",
    "description": {
    	"en": "Control your curtains with Slide through Homey",
		"nl": "Bestuur je gordijnen met Slide via Homey"
    },
    "drivers": [
      {
          "id": "slide",
          "name": {
              "en": "Slide",
              "nl": "Slide"
          },
          "images": {
              "large": "drivers/settopbox/assets/images/large.jpg",
              "small": "drivers/settopbox/assets/images/small.jpg"
          },
          "class": "windowcoverings",
          "capabilities": ["onoff", "dim"],
          "capabilitiesOptions": {
	          "dim": {
		          "title": {
			          "en": "Drag to close",
			          "nl": "Schuif om te sluiten"
		          }
	          }
	      },
	      "mobile": {
            "components": [
                {
                    "id": "icon",
                    "capabilities": [ "onoff" ]
                },
                {
                    "id": "slider",
                    "capabilities": [ "dim" ],
                    "options": {
                        "showTitle": true
                    }
                },
                {
                    "id": "toggle",
                    "capabilities": [ "onoff" ]
                }
				]
		  },
          "pair": [
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices"
                }
          ],
          "settings": [
                {
                    "type": "group",
                    "label": {
                        "en": "General settings",
                        "nl": "Algemene instellingen"
                    },
                    "children": [
	                    {
	                        "id": "hostname",
	                        "type": "text",
	                        "label": {
	                            "en": "Host name",
	                            "nl": "Host name"
	                        },
	                        "value": "slide_12345"
	                    }
	                ]
	            }
	        ]
      }
    ],
    "flow": {
	    "actions": [
        {
            "id": "ImmediateStop",
            "title": {
                "en": "Immediate Stop",
                "nl": "Stop direct"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "placeholder": {
                  "en": "Select slide",
                  "nl": "Selecteer slide"
                },
	            "filter": "driver_id=slide"
              }
            ]
        }
       
       ]
	}
}