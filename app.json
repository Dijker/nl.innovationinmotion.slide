{
    "id": "nl.innovationinmotion.slide",
    "name": {
        "en": "Slide Smart Curtains",
        "nl": "Slide slimme gordijnen"
    },
    "sdk": 2,
    "version": "0.0.1",
    "compatibility": "*",
    "author": {
        "name": "Chamid Media",
        "email": "info@chamidmedia.nl"
    },
    "contributing": {
	    "donate": {
	        "paypal": {
	            "email": "info@chamidmedia.nl",
	            "currency": "EUR"
	        }
	    }
	},
    "images": {
      "large": "./assets/images/large.jpg",
      "small": "./assets/images/small.jpg"
    },
    "category": "appliances",
    "description": {
    	"en": "Control your curtains with Slide through Homey",
		"nl": "Bestuur je gordijnen met Slide via Homey"
    },
    "drivers": [
      {
          "id": "slide",
          "name": {
              "en": "Slide",
              "nl": "Slide"
          },
          "images": {
              "large": "drivers/slide/assets/images/large.jpg",
              "small": "drivers/slide/assets/images/small.jpg"
          },
          "class": "windowcoverings",
          "capabilities": ["dim", "windowcoverings_state"],
          "capabilitiesOptions": {
	          "dim": {
		          "title": {
			          "en": "Drag right to close",
			          "nl": "Schuif rechts om te sluiten"
		          }
	          }
	      },
	      "mobile": {
            "components": [
                {
                    "id": "slider",
                    "capabilities": [ "dim" ],
                    "options": {
                        "showTitle": true
                    }
                }
				]
		  },
          "pair": [
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices"
                }
          ]
      }
    ],
    "flow": {
	    "actions": [
        {
            "id": "ImmediateStop",
            "title": {
                "en": "Immediate Stop",
                "nl": "Stop direct"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "placeholder": {
                  "en": "Select slide",
                  "nl": "Selecteer slide"
                },
	            "filter": "driver_id=slide"
              }
            ]
        }
       
       ]
	}
}